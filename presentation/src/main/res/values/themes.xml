<resources>
    <!-- Base application theme. -->
    <style name="Theme.PatientApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <!--        <item name="colorPrimaryVariant">@color/blue_very_light</item>-->
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomCardView" parent="CardView.Light">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>
    <style name="CustomImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>